<resources>

    <style name="Base.Theme.OfferwallDemoApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/home_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.OfferwallDemoApp" parent="Base.Theme.OfferwallDemoApp" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/home_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowSplashScreenBackground">@color/home_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.OfferwallDemoApp</item>
    </style>

</resources>